<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modify">

    <TextView
        android:id="@+id/modifytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="개인 정보 수정"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></TextView>

    <TextView
        android:id="@+id/textveiwhakbun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="학번 : "
        android:textSize="35dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"></TextView>

    <EditText
        android:id="@+id/inputhakbun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="학번을 입력하시오."
        android:width="250dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="182dp" ></EditText>

    <TextView
        android:id="@+id/textveiwpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="PW : "
        android:textSize="35dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467"></TextView>

    <EditText
        android:id="@+id/inputpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:hint="패스워드를 입력하시오."
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="323dp" ></EditText>

    <Button
        android:id="@+id/modifycheckbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="600dp"></Button>

    <Button
        android:id="@+id/modifycancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="600dp"></Button>

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/heart"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="398dp"></ImageView>

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/heart"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="246dp"></ImageView>

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/heart"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="527dp"></ImageView>

    <ImageView
        android:id="@+id/heart4"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/heart"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="102dp"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>